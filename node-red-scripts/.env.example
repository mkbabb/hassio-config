# Node-RED API Configuration

# Deployment Mode
# Options: standalone, ha-addon, auto
NODE_RED_MODE=auto

# Standalone Mode Configuration
NODE_RED_URL=http://localhost:1880
NODE_RED_USERNAME=
NODE_RED_PASSWORD=

# Home Assistant Addon Mode Configuration
HA_URL=http://homeassistant.local:8123
HA_TOKEN=YOUR_LONG_LIVED_ACCESS_TOKEN
HA_ADDON_SLUG=a0d7b954_nodered

# Build Configuration
BUILD_INPUT_DIR=src
BUILD_OUTPUT_DIR=dist
BUILD_CACHE_TIME=86400000

# Deployment Options
DEPLOY_AUTO_BACKUP=true
DEPLOY_SHOW_DIFF=true